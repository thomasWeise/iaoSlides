\def\mathllapinternal#1#2{\llap{$\mathsurround=0pt#1{#2}$}}%
\def\mathrlapinternal#1#2{\rlap{$\mathsurround=0pt#1{#2}$}}%
\def\mathclapinternal#1#2{\clap{$\mathsurround=0pt#1{#2}$}}%
%
